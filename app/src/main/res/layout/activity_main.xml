<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="cursive"
        android:text=" Welcome to ALC 4.0"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/btnToAboutPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.56" />

    <Button
        android:id="@+id/btnToAboutPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/shape_rounded"
        android:fontFamily="casual"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="About ALC"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnToMyProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_rounded"
        android:fontFamily="casual"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="MY PROFILE"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnToAboutPage"
        app:layout_constraintStart_toStartOf="@+id/btnToAboutPage"
        app:layout_constraintTop_toBottomOf="@+id/btnToAboutPage"
        app:layout_constraintVertical_bias="0.07999998" />

</android.support.constraint.ConstraintLayout>